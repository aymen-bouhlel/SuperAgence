{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="section">
        <div class="row">
            <div class="col m12">
                <form action="{{ path('login') }}" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>

                    <div class="form-group">
                        <label for="username" class="sr-only">Username:</label>
                        <input type="text" name="_username" id="username" value="{{ last_username }}" class="form-control" placeholder="Username" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password" class="sr-only">Password:</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Password" autofocus>
                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">connexion</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
