{{ form_start(formProperty) }}
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4">{{ form_row(formProperty.title) }}</div>
            <div class="col-md-4">{{ form_row(formProperty.surface) }}</div>
            <div class="col-md-4">{{ form_row(formProperty.price) }}</div>
        </div>
    </div>  
    <div class="col-md-4">
        <div class="row flex justify-content-start flex-wrap">
            {% for picture in property.pictures %}
                <div class="col" style="width: 100px; flex:none; margin: 5px;">
                    <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('thumb') }}" width="100" alt="">
                    <a href="{{ path('admin.picture.delete', {id: picture.id}) }}" class="btn btn-danger" data-delete data-token="{{ csrf_token('delete' ~ picture.id) }}">Supprimer</a>
                </div>
            {% endfor %}
        </div>
    </div>   
</div>

<div class="row">
    <div class="col-md-2">{{ form_row(formProperty.rooms) }}</div>
    <div class="col-md-2">{{ form_row(formProperty.bedrooms) }}</div>
    <div class="col-md-2">{{ form_row(formProperty.heat) }}</div>
    <div class="col-md-2">{{ form_row(formProperty.floor) }}</div>
</div>

<div class="row">
    <div class="col-md-8">{{ form_row(formProperty.pictureFiles) }}</div>
    <div class="col-md-4">{{ form_row(formProperty.sold) }}</div>
</div>

<div class="row">
    <div class="col-md-8">{{ form_row(formProperty.adresse) }}</div>
    <div class="col-md-2">{{ form_row(formProperty.city) }}</div>
    <div class="col-md-2">{{ form_row(formProperty.postale_code) }}</div>    
</div>

{{ form_rest(formProperty) }}
<button class="btn btn-primary">{{button|default('Enregistrer')}}</button>
{{ form_end(formProperty) }}